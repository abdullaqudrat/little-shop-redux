<h1>Merchants Dashboard</h1>

<h3>Merchant With Most Items: <%= Merchant.with_most_items %><h3>

<h3>Merchant With Highest Price Item:<h3>

<div>
<% @merchants.each do |m| %>
  <h3><a href="/merchants/<%= m.id %>"><%= m.name %></a></h3>
  <h4><u>Item Count:</u> <%= Merchant.total_item_count(m.id) %></a></h4>
  <h4><u>Average Item Price:</u> <%= Merchant.average_item_price(m.id) %></a></h4>
  <h4><u>Total Cost Of Items:</u> <%= Merchant.total_price_of_all_items(m.id) %></a></h4>
<% end %>
</div>
