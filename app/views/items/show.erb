<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 id="jumbo" class="display-4 text-center">Item: <%= @item.name %></h1>
  </div>
</div>

<form class="edit" action="/items/<%= @item.id %>/edit" method="GET">
  <button class="btn btn-primary btn-lg">Edit</button>
</form>
<form class="delete" action="/items/<%= @item.id %>" method="POST">
  <input type="hidden" name="_method" value="DELETE">
  <input type="submit" class="btn btn-secondary btn-sm" value="Delete" />
</form>
<p><%= number_to_currency((@item.unit_price)/100.to_f) %></p>
<p><%= @item.description %></p>
<img src= "/images/capy-photo.jpg" alt="<%= @item.name %>-image">
<a href='/merchants/<%= @merchant.id %>'><h2>Merchant: <%= @merchant.name %></h2></a>
