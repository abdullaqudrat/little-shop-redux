<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 id="jumbo" class="display-4 text-center">Create New Item</h1>
  </div>
</div>

<form class="new-item" action="/items" method="POST">
  <input type='text' name='item[name]' placeholder='Item Name'>
  <input type='text' name='item[description]' placeholder='Item Description'>
  <input type='text' name='item[unit_price]' placeholder='Item Price'>
  <input type='text' name='item[image]' placeholder='Image URL'>
  <select id='merchant_dropdown' name='merchant_dropdown' type='text'>
  <% @merchants.each do |merchant| %>
    <option value="<%= merchant.id %>"> <%= merchant.name %> </option>
  <% end %>
  </select>
  <input type='submit' class="btn btn-primary btn-lg" value="Create Item">
</form>
<form class="new-item" action="/items" method="GET">
  <input type='submit' class="btn btn-secondary btn-sm" value="Cancel">
</form>
