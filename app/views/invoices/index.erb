<h1>Invoices</h1>

  <% @invoices.each do |i| %>
    <h2><a href="/invoices/<%= i.id %>"><%= i.id %></a></h2>
    <form id="invoice-<%= i.id %>-edit" class="edit" action="/invoices/<%= i.id %>/edit" method="GET">
      <button>Edit</button>
    </form>
    <form id="invoice-<%= i.id %>-delete" class="delete" action="/invoices/<%= i.id %>" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Delete" />
    </form>
  <% end %>
