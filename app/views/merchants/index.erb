<h1>Merchants</h1>

  <form action="/merchants/new">
    <input type="submit" value="Create A New Merchant">
  </form>

  <% @merchants.each do |m| %>
    <h2><a href="/merchants/<%= m.id %>"><%= m.name %></a></h2>
    <form id="merchant-<%= m.id %>" class="edit" action="/merchants/<%= m.id %>/edit" method="GET">
      <button>Edit</button>
    </form>
    <form id="merchant-<%= m.id %>" class="delete" action="/merchants/<%= m.id %>" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Delete" />
    </form>
  <% end %>
