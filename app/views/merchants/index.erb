<h1>Merchants</h1>

  <form action="/merchants/new">
    <input type="submit" value="Create A New Merchant">
  </form>
  
  <% @merchants.each do |m| %>
    <h2><a href="/merchants/<%= m.id %>"><%= m.name %></a></h2>
    <form action="/merchants">
      <input type="submit" value="Edit">
      <input type="submit" value="Delete">
    </form>
  <% end %>
